{% extends 'base.html.twig' %}

{% block body %}
<div class="container volcano mt-4" style="flex-grow: 1;">
    <h1 class="mt-5">Adventurer Guild</h1>
    <a href="{{ path('admin_adventurer_create') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Enlist adventurer</a>
    <div class="dino-stats-container mt-2 p-3">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Health</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for adventurer in adventurers %}
                <tr>
                    <td>{{ adventurer.name }}</td>
                    <td>{{ adventurer.class }}</td>
                    <td>{{ adventurer.health }} / 15</td>
                    <th>
                        <a href="#" class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
